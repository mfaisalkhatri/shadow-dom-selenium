<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Shadow DOM Automation Tests">
    <test name="Shadow DOM Tests with Chrome Browser" enabled="false">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="ShadowDomTests">
                <methods>
                    <include name="testShadowDomRootOnChromeDownloadPage"/>
                </methods>
            </class>
        </classes>
    </test> <!-- Test -->
    <test name="Shadow DOM Tests with Firefox Browser" enabled="false">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="ShadowDomTests">
                <methods>
                    <include name="testShadowDom"/>
                </methods>
            </class>
        </classes>
    </test> <!-- Test -->
    <test name="Shadow DOM Tests on Watir Website" enabled="false">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="ShadowDomTests">
                <methods>
                    <include name="testShadowDomWatir"/>
                </methods>
            </class>
        </classes>
    </test> <!-- Test -->
    <test name="Shadow DOM Tests on HTMLElements Website">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="ShadowRootTests">
                <methods>
                    <include name="testShadowRootElement"/>
                </methods>
            </class>
        </classes>
    </test> <!-- Test -->

</suite>